.rcMenuContainer {
    font-family:verdana, arial;
    position: absolute;
    border: 1px solid black;
    background: #ffffff url('../images/template/bbg0.gif') repeat-x;
    color: #555555;
    padding:2px;
    width:220px; 
}
.rcMenuItem {
    font-size:11px;
    font-weight:normal;
    padding:3px;
    width:100%;
}
.rcMenuItemHover {
    font-size:11px;
    font-weight:bold;
    text-transform: uppercase;
    background: #ffffff url('../images/template/bbg1.gif') repeat-x;
    color:white;
    padding:3px;
}
.rcMenuItemText {
    font-size:11px;
    font-weight:normal;
    border:0px;
    padding:2px;
}
.rcMenuItemTextExt {
    font-size:11px;
    font-weight:normal;
    border:1px dotted grey;
    padding:2px;
} 
.rcMenuSeparator{
    color:black;
    height:3px;
}
.rcImage {
	padding-right:4px; 
}